<main id="create">

  {{#if errors}}
    <div>
      <div class="errorContainer">
        {{#each errors}}
          <p>{{this}}</p>
        {{/each}}
      </div>
    </div>
  {{/if}}

  <section id="create-container">
    <div class="create-container-info">
      <h1>Create Game Code Offer</h1>
      <h4>Post your code to sell</h4>
      <form action="/games/create" method="post">
        <label>Platform:</label>
        <select id="platform" name="platform">
            <option value="" selected>-------</option>
            <option value="PC" {{#if body.select.PC}} selected {{/if}}>PC</option>
            <option value="Nintendo" {{#if body.select.Nintendo}} selected {{/if}}>Nintendo</option>
            <option value="PS4" {{#if body.select.PS4}} selected {{/if}}>PS4</option>
            <option value="PS5" {{#if body.select.PS5}} selected {{/if}}>PS5</option>
            <option value="XBOX" {{#if body.select.XBOX}} selected {{/if}}>XBOX</option>
        </select>
        <label>Name:</label>
        <input type="text" id="name" name="name" value="{{body.name}}" />
        <label>Image:</label>
        <input type="text" id="image" name="imageUrl" value="{{body.imageUrl}}" placeholder="http://..." />
        <label>Price:</label>
        <input type="number" id="price" name="price" value="{{body.price}}" />
        <label>Genre:</label>
        <input type="text" id="genre" name="genre" value="{{body.genre}}" />
        <label>Description:</label>
        <textarea id="description" name="description">{{body.description}}</textarea>

        <input type="submit" id="btn" value="CREATE" />
      </form>
    </div>
  </section>
</main>
<main id="edit">

  {{#if errors}}
    <div>
      <div class="errorContainer">
        {{#each errors}}
          <p>{{this}}</p>
        {{/each}}
      </div>
    </div>
  {{/if}}

  <section id="edit-container">
    <div class="edit-container-info">
      <h1>Edit Game Code Offer</h1>
      <form action="/games/{{game._id}}/edit" method="post">
        <label>Platform:</label>
        <select id="platform" name="platform">
            <option value="" selected>-------</option>
            <option value="PC" {{#if game.select.PC}} selected {{/if}}>PC</option>
            <option value="Nintendo" {{#if game.select.Nintendo}} selected {{/if}}>Nintendo</option>
            <option value="PS4" {{#if game.select.PS4}} selected {{/if}}>PS4</option>
            <option value="PS5" {{#if game.select.PS5}} selected {{/if}}>PS5</option>
            <option value="XBOX" {{#if game.select.XBOX}} selected {{/if}}>XBOX</option>
        </select>
        <label>Name:</label>
        <input type="text" id="name" name="name" value="{{game.name}}" />
        <label>Image:</label>
        <input type="text" id="image" name="imageUrl" value="{{game.imageUrl}}" placeholder="{{game.imageUrl}}" />
        <label>Price:</label>
        <input type="number" id="price" name="price" value="{{game.price}}" />
        <label>Genre:</label>
        <input type="text" id="genre" name="genre" value="{{game.genre}}" />
        <label>Description:</label>
        <textarea id="description" name="description">{{game.description}}</textarea>
        <input type="submit" id="btn" value="EDIT" />
      </form>
    </div>
  </section>
</main>
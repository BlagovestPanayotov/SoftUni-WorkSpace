<main>
  <form class="theater-form" action="/play/create" method="post">
    <h1>Create Theater</h1>
    <div>
      <label for="title">Theater Title:</label>
      <input type="text" placeholder="Theater name" name="title" value="{{body.title}}" />
    </div>
    <div>
      <label for="description">Theater Description:</label>
      <textarea placeholder="Description" name="description">{{body.description}}</textarea>
    </div>
    <div>
      <label for="imageUrl">Image url:</label>
      <input type="text" placeholder="Image Url" name="imageUrl" value="{{body.imageUrl}}" />
    </div>
    <div class="check">
      <input type="checkbox" id="check-box" name="public" {{#if body.public}} checked {{/if}} />
      <label for="check-box">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
  </form>
</main>